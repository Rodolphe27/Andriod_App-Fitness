    <!--Question Category 6: Rumination  -->

    <!-- que13-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="question13"
        android:textColor="@color/light_red"
        android:textSize="@dimen/small_font_size"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="My attention is often focused on characteristics of myself that I donâ€™t want to think about."
            android:textSize="@dimen/small_font_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_layout_height"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="not agree"
                android:textSize="@dimen/small_font_size"
                android:layout_gravity="start"/>

            <SeekBar
                android:id="@+id/ques13_seekbar"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="100"
                android:progress="50"
                android:splitTrack="false"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="fully agree"
                android:textSize="@dimen/small_font_size"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>


