<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/navigationView"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_questionnaire"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:text="@string/questionnaire" />

        <Button
            android:id="@+id/button_tracking"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:text="@string/tracking" />

        <Button
            android:id="@+id/button_archive"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:text="@string/archive" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:text="@string/settings" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonQuestionnaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:contentDescription="@string/questionnaire"
                android:src="@drawable/ic_questionnaire" />

            <ImageButton
                android:id="@+id/buttonTracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:contentDescription="@string/tracking"
                android:src="@drawable/ic_tracking" />

            <ImageButton
                android:id="@+id/buttonArchive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:contentDescription="@string/archive"
                android:src="@drawable/ic_archive" />

            <ImageButton
                android:id="@+id/buttonSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_500"
                android:contentDescription="@string/settings"
                android:src="@drawable/ic_settings" />

        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>
